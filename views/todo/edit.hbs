
      {{> header}}


      <div class="row my-4 p-2 justify-content-center">
        <div class="col-md-4">
          <div class="card ">
          <div class="card-header text-center font-bold h3">
            Edit TODO
          </div>
          <div class="card-body">
            <form action="./" method="post" class="my-4">
              <input type="hidden" name="_id" value="{{todo._id}}">
              <div class="form-group my-2">
                <label for="title">Title:</label>
                <input type="text"
                  class="form-control text-white" name="title"  placeholder="Example: read book" value="{{todo.title}}">
              </div>

              <div class="form-group my-2">
               <label for="description">Description:</label>
                <input type="text"
                  class="form-control text-white" name="description"  placeholder="Example: read book" value="{{todo.description}}">
              </div>

              <button type="submit" class="btn btn-primary  w-100">
                  Guardar
              </button>
            </form>
          </div>
        </div>    
        </div>
              
      </div>


      {{> footer}}